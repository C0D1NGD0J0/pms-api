{
  "compilerOptions": {
    "target": "es2017",
    "types": ["node", "jest"],
    "lib": ["es2017", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useUnknownInCatchVariables": false,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./app/controllers/*"],
      "@interfaces/*": ["./app/interfaces/*"],
      "@models/*": ["./app/models/*"],
      "@routes/*": ["./app/routes/*"],
      "@database/*": ["./app/database/*"],
      "@services/*": ["./app/services/*"],
      "@sockets/*": ["./app/sockets/*"],
      "@caching/*": ["./app/caching/*"],
      "@queues/*": ["./app/queues/*"],
      "@mailer/*": ["./app/mailer/*"],
      "@dao/*": ["./app/dao/*"],
      "@di/*": ["./app/di/*"],
      "@shared/*": ["./app/shared/*"],
      "@workers/*": ["./app/workers/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["./app/utils/*"],
      "@root/*": ["*"]
    },
    "typeRoots": ["./types", "node_modules/@types"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "swc": true
  },
  "compileOnSave": true,
  "include": [
    "./app/**/*.ts",
    "./app/**/*.js",
    "./server.ts",
    "./app/**/*.ejs",
    "./tests/configs/teardown.test.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.*",
    "**/mocks/*",
    "./tests/**/*"
  ]
}
